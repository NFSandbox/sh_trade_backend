    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Create Database Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/create_db.py",
            "args": [
                "-y",
            ],
            "console": "integratedTerminal"
        },
    ]
}